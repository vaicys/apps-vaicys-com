    <style type="text/css">
        a {
            color: white;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        body {
            margin: 0px;
            background-color: #124;
        }

        #heading {
            text-align: center;
            background-color: #124;
            padding-top: 70px;
            padding-bottom: 15px;
        }

        #subheading {
            text-align: center;
            background-color: #456;
            padding-top: 5px;
            padding-bottom: 10px;
            height: 35px;
            background-image: url('data:image/png;base64,');
            /*background: #566b86;
            background: -moz-linear-gradient(top, #566b86 0%, #324254 100%);
            background: -webkit-linear-gradient(top, #566b86 0%,#324254 100%);
            background: linear-gradient(to bottom, #566b86 0%,#324254 100%);
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#566b86', endColorstr='#324254',GradientType=0 );*/
        }

        #footer {
            text-align: center;
            color: white;
            background-color: #124;
            height: auto;
            padding: 50px;
            font: 18pt georgia, sefif;
            letter-spacing: 3px;
        }

        #content {
            background-color: #eeeef0;
            padding: 50px 0;
        }

        #container {
            width: 800px;
            height: 450px;
            margin: 0 auto;
        }

        #left {
            float: left;
            width: 350px;
        }

        #right {
            float: right;
            width: 430px;
        }

        h1 {
            margin: 0;
            color: white;
            font: 3.5em georgia, serif;
        }

        h2 {
            margin: 0;
            color: white;
            font: italic 1.8em georgia, serif;
        }

        h3 {
            margin: 0;
            font: bold 18pt georgia, serif;
            text-align: center;
        }

        ul {
            font: 1.2em georgia, serif;
        }

        #footer span {
            margin: 30px 50px;
            text-align: center;
        }
    </style>

</head>
<body>
    <div>
        @RenderBody()
    </div>
    <partial name="GoogleAnalytics" />
</body>
</html>
